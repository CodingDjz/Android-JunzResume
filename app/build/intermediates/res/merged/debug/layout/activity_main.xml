<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <include
                android:id="@+id/include_bar"
                layout="@layout/title_menu" />

            <RelativeLayout
                android:id="@+id/content_framelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/include_bar"
                android:background="@drawable/default_bgp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#111"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="20dp"
            android:listSelector="@drawable/listview_selector" />
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout><!-- From: file:/E:/Java/Android%20Sapce/JunzResume1/app/src/main/res/layout/activity_main.xml -->