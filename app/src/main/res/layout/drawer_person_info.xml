<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#373737"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/info_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丁君之"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/info_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/male" />

        <TextView
            android:id="@+id/info_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1992/06/21"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/info_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="本科"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/info_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="大理大学"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/info_professional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="通信工程"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#373737"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/info_nativeplace_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/regist_detail_native_place"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/info_nativeplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="河北省保定市北市区xxxx"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/info_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/regist_detail_email"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/info_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="CodingDjz@sina.com"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#373737"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/info_contactnumber_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/regist_detail_contact_num"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/info_contactnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="18330250752"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>